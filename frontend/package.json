{
    "name": "coroneria-desktop",
    "version": "1.0.0",
    "description": "CoronerIA - Asistente de IA para Documentación Médico-Legal",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.22.0",
        "zustand": "^4.5.0",
        "lucide-react": "^0.330.0",
        "three": "^0.161.0",
        "@react-three/fiber": "^8.15.0",
        "@react-three/drei": "^9.99.0",
        "axios": "^1.6.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/three": "^0.161.0",
        "@vitejs/plugin-react": "^4.2.0",
        "autoprefixer": "^10.4.17",
        "concurrently": "^8.2.0",
        "electron": "^29.0.0",
        "electron-builder": "^24.9.0",
        "postcss": "^8.4.35",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.0",
        "vite": "^5.1.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.coroneria.desktop",
        "productName": "CoronerIA",
        "directories": {
            "output": "dist-electron"
        },
        "win": {
            "target": "nsis",
            "icon": "public/icon.ico"
        }
    }
}